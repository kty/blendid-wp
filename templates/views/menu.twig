{% if menu %}
	<ul {% if sub %}class="sub"{% endif %}>
	{% for item in menu %}
		<li class="nav-item {{ item.classes | join(' ') }}">
			<a class="nav-link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% include "menu.twig" with {'menu': item.get_children, 'sub': true} %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
