{% from 'macros/helpers.twig' import sprite %}

{% block html_head_container %}
{% include 'html-header.twig' %}
{% block head %}{% endblock %}
</head>
{% endblock %}

	<body class="{{ body_class }}" data-template="base.twig">
		<header id="header">
			{% block header %}
				<div class="container">
					<div class="d-flex align-items-center justify-content-end">
						<a class="logo mr-auto" href="{{ site.url }}" rel="home">{{ site.name }}</a>
						<button class="navbar-toggler float-xs-right hidden-lg-up align-self-center" type="button" data-toggle="offcanvas" data-target="#nav-offcanvas"></button>
						<nav id="nav" class="nav hidden-md-down" role="navigation">
							{% include "menu.twig" with { 'menu': menu.get_items } %}
						</nav>
					</div>
				</div>
			{% endblock %}
		</header>

		<div class="offcanvas offcanvas-right">

			<main id="main" role="main">
				<div class="container">
					<div class="row">
						<div id="content" class="content {% if sidebar %} col-sm-9 {% else %} col-sm-12 {% endif %} {{ sidebar_class }}">
							{% block content %}
								Sorry, no content
							{% endblock %}
						</div>

						{% if sidebar %}
							<aside id="aside" class="aside col-sm-3">
								{{ sidebar }}
							</aside>
						{% endif %}
					</div>
				</div>

				{% include "blocks.twig" %}

				{% block footer %}
					<footer id="footer">
						{% include 'footer.twig' %}
					</footer>
				{% endblock %}
			</main>

			<nav id="nav-offcanvas" class="nav-offcanvas hidden-lg-up d-flex align-items-center">
	      {% include "menu.twig" with { 'menu': menu.get_items } %}
	    </nav>

		</div> <!-- /.offcanvas -->

		{{ function('wp_footer') }}

	</body>
</html>
