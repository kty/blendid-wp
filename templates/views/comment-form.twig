<form method="post" class="comment-form" action="{{ site.url~'/wp-comments-post.php' }}">
  {% if comment %}
    <h2>Reply to {{comment.comment_author}}</h2>
  {% else %}
    <h2>Comment {{post.name}}</h2>
  {% endif %}

  {% if user %}
    <input type="hidden" name="email" value="{{ user.email }}">
    <input type="hidden" name="author" value="{{ user.name }}">
    <input type="hidden" name="url" value="{{ user.link }}">
  {% else %}
    <div>
      <div class="form-group">
        <label for="author">Name</label>
        <input class="form-control" placeholder="Name" required name="author" type="text" id="author">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" placeholder="Email" required name="email" type="text" id="email">
      </div>

      <div class="form-group">
        <label for="url">Website</label>
        <input class="form-control" placeholder="Website" name="url" id="url" type="text">
      </div>
    </div>
  {% endif %}

  <div class="form-group">
    <label for="comment">Comment</label>
    <textarea class="form-control" placeholder="Message..." name="comment" cols="60" rows="3" id="comment"></textarea>
  </div>

  <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
  <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

  <div>
    <button type="submit" name="submit" class="btn btn-primary">Comment</button>
    <button type="reset" class="btn btn-secondary comment-cancel">Cancel</button>
  </div>
</form>